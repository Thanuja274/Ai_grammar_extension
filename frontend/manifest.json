{
  "manifest_version": 3,
  "name": "AI Grammar & Sentiment Checker",
  "version": "1.0",
  "description": "Correct grammar and check sentiment using AI",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [               
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
